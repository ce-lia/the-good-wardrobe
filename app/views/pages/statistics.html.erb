<%= javascript_include_tag "https://www.gstatic.com/charts/loader.js" %>
<%= javascript_include_tag "chartkick" %>

<div class="stat-container">
  <ul>
  <% current_user.badges.each do |badge| %>
    <li><%= image_tag(badge.custom_fields[:image], class:"badge" )%> <br><%= badge.description%></li>
<% end %>
 </ul>
  <h1>Statistics</h1>
  <div class="row">
    <div class="col-md-6 col-sm-12">
      <h4>Thrifted clothes ratio</h3>
      <%= pie_chart (@thrift_hash),donut: true, height: "200px" %>
    </div>
    <div class="col-md-6 col-sm-12">
      <h4>Composition of your new clothes</h3>
      <%= pie_chart @composition_hash, height: "200px" %>
    </div>
    <div class="w-100"></div>
  </div>
      <h4>Average time spent in your wardrobe</h3>
      <%= bar_chart @products.group(:category).sum(@lifetime),xtitle: "Months",label: "Months" %>
       <h4>Where were your clothes made ?</h3>
      <%= geo_chart @products.group(:origin).count %>
</div>

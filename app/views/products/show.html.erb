<h1>Produit : <%= @product.title %></h1>

<%if @product.photo.attached? %>
  <%= cl_image_tag @product.photo.key, height: 300, width: 400, crop: :fill %>
  <%else%>
  <%= cl_image_tag("summer-clothes-set_74855-446_ehwivf.jpg") %>
<%end%>
    <h3>Description</h3>
    <p>
    	<%= @product.description%>
    </p>

    <h3>Brand</h3>
    <p>
    	<%= @product.brand%>
    </p>

    <h3>Second hand</h3>
    <p>
    	<%= @product.second_hand%>
    </p>

    <h3>Category</h3>
    <p>
    	<%= @product.category%>
    </p>

    <h3>Origin</h3>


    <p>
    	<%= @product.origin%>
    </p>

<p>
    <%= link_to "Edit ", edit_product_path(@product) %></p>
<p>
    <%= link_to "Delete", product_path,
      method: :delete,
      data: { confirm: "Are you sure?" } %>
</p>

<p><%= link_to 'Back', :back %></p>


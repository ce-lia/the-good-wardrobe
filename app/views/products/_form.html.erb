<%= simple_form_for @product do |f| %>
  <%= f.input :description, label: 'this is a red dress is totally brand new', error: 'you must describe this clothe' %>
  <%= f.input :second_hand %>
  <%= f.input :purchase_date, label: 'AAAA/MM/DD' %>
  <%= f.input :discard_date, label: 'AAAA/MM/DD' %>
  <%= f.input :title, label: 'red dress', error: 'Username is mandatory, please specify one' %>
  <%= f.input :brand, label: 'Dior, H&M...', error: 'Username is mandatory, please specify one' %>
  <%= f.input :origin, label: 'China, France, India...', error: 'Username is mandatory, please specify one' %>
  <%= f.input :status, label: 'to sell' %>
  <%= f.input :category, label: 'category' %>

  <%= f.submit "add this cloth" %>
<% end %>

<%= simple_form_for @product do |f| %>
  <%= f.input :title, label: "Titre", placeholder: 'red dress', error: 'Title is mandatory, please specify one' %>
  <%= f.input :description, label: "Description", placeholder: 'this is a red dress is totally brand new', error: 'Please enter a short description' %>
  <%= f.input :second_hand %>
  <%= f.input :purchase_date, label: "Purchase date", placeholder: 'AAAA/MM/DD' %>
  <%= f.input :brand, label: "Brand", placeholder: 'Dior, H&M...'%>
  <%= f.input :origin, label: "Made in", placeholderder: 'Made in China, France, India...'%>
  <%= f.input :category, label: 'category', :collection => ["dress", "jeans", "shirt", "pants", "skirt", "t-shirt", "sweatshirt", "coat", "jacket"] %>
  <%= f.input :photo, as: :file %>
  <% if @product.category.blank? %>
    <%= f.submit "Submit" %>
  <% else %>
    <%= f.submit "Update" %>
  <% end %>
<% end %>

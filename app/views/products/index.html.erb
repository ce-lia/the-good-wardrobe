<h1 class="title-index">My Wardrobe</h1>
<p class="add-product"><%= link_to "Add New Product", new_product_path(@product) %></p>


<div class="card-all">
  <% @products.each do |product| %>
    <div class="card-trip">
      <%if product.photo.attached? %>
        <div class="img-card">
          <span class="tag">status</span>
          <%= cl_image_tag product.photo.key %>
        </div>
        <%else%>
        <div class="img-card">
          <span class="tag">status</span>
          <%= cl_image_tag("summer-clothes-set_74855-446_ehwivf.jpg") %>
        </div>
      <%end%>
      <div class="card-trip-infos">
        <div>
          <h3 class="title-product"><%=product.title%></h3>
          <span class="second-hand">frippe</span>
          <%if product.description.length >= 0 %>
            <p><%=product.description.first(90)%>...</p>
          <%else%>
            <p><%=product.description%></p>
          <%end%>
        </div>
        <p class="card-trip-pricing"><%= link_to "See more", product_path(product) %></p>
      </div>
    </div>
  <% end %>
</div>

<style>
  .footer {
  background-color: #D6B3FE;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0px 50px;
  color: white;
  position:inline;
  width:100%;
  height:100px;
}
.footer-links {
  display: flex;
  align-items: center;
}
.footer-links a {
  color: white;
  opacity: 0.8;
  text-decoration: none;
  font-size: 16px;
  padding: 0px 10px;
}
.footer-links a:hover {
  opacity: 1;
}
.footer .fa-heart {
  color: #D23333;
}
</style>
